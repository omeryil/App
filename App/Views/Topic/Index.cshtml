@model List<Story>
@{
    ViewData["Title"] = "Topics";
}
<div class="text-center">
    <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
    </tr>
  </thead>
  <tbody>
      @for (var i = 0; i < Model.Count; i++)
     {
       <tr>
          <th scope="row">@(i+1)</th>
          <td>
              <div class="row">
                <div class="col-md-11"><a href="/Exam/Index/@Model[i].ID">@Model[i].Title</a></div>
                <div class="col-md-1">
                    <button type="button" class="btn btn-default" aria-label="Left Align" onclick="remove(@Model[i].ID)">
                        <span class="fa fa fa-trash" aria-hidden="true"></span>
                    </button>
                </div>
               </div>
          </td>
       </tr>
     }
  </tbody>
</table>
</div>